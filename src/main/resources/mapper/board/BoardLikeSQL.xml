<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.board.mapper.BoardLikeMapper">

    <!-- 특정 게시판에 대한 좋아요 추가 -->
    <insert id="insertBoardLike" parameterType="com.example.demo.dto.BoardLikeDto">
        INSERT INTO board_likes (user_id, board_id)
        VALUES (#{userId}, #{boardId})
    </insert>

    <!-- 특정 게시판에 대한 좋아요 삭제 -->
    <delete id="deleteBoardLike" parameterType="map">
        DELETE FROM board_likes
        WHERE user_id = #{userId} AND board_id = #{boardId}
    </delete>

    <!-- 특정 게시판에 대한 모든 좋아요 수 조회 -->
    <select id="selectBoardLikeCount" parameterType="int" resultType="int">
        SELECT COUNT(*)
        FROM board_likes
        WHERE board_id = #{boardId}
    </select>

    <!-- 특정 사용자가 특정 게시판에 좋아요를 했는지 확인 -->
    <select id="checkIfUserLikedBoard" parameterType="map" resultType="boolean">
        SELECT COUNT(*)
        FROM board_likes
        WHERE user_id = #{userId} AND board_id = #{boardId}
    </select>

    <!-- 특정 게시판에 좋아요한 사용자 목록 조회 -->
    <select id="selectUsersWhoLikedBoard" parameterType="int" resultType="com.example.demo.dto.BoardLikeDto">
        SELECT * 
        FROM board_likes
        WHERE board_id = #{boardId}
    </select>

</mapper>
