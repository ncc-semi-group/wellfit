<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.board.mapper.BoardImageMapper">

    <!-- 모든 게시판 이미지 목록 조회 -->
    <select id="selectAllBoardImages" resultType="com.example.demo.dto.BoardImageDto">
        SELECT id, board_id AS boardId, file_name AS fileName
        FROM board_images
    </select>

    <!-- 특정 게시판의 이미지 목록 조회 (boardId로 검색) -->
    <select id="selectImagesByBoardId" parameterType="int" resultType="com.example.demo.dto.BoardImageDto">
        SELECT id, board_id AS boardId, file_name AS fileName
        FROM board_images
        WHERE board_id = #{boardId}
    </select>

    <!-- 게시판 이미지 추가 -->
    <insert id="insertBoardImage" parameterType="com.example.demo.dto.BoardImageDto">
        INSERT INTO board_images (board_id, file_name)
        VALUES (#{boardId}, #{fileName})
    </insert>

    <!-- 게시판 이미지 수정 -->
    <update id="updateBoardImage" parameterType="com.example.demo.dto.BoardImageDto">
        UPDATE board_images
        SET file_name = #{fileName}
        WHERE id = #{id}
    </update>

    <!-- 게시판 이미지 삭제 -->
    <delete id="deleteBoardImage" parameterType="int">
        DELETE FROM board_images
        WHERE id = #{id}
    </delete>

    <!-- 특정 게시판 이미지 삭제 (boardId로 삭제) -->
    <delete id="deleteImagesByBoardId" parameterType="int">
        DELETE FROM board_images
        WHERE board_id = #{boardId}
    </delete>

</mapper>
